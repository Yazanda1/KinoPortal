@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Extensions
@{
    var root = Umbraco.ContentAtRoot().FirstOrDefault();
    var feedback = root?.DescendantsOfType("feedbackOverview").FirstOrDefault();
    var snacks   = root?.DescendantsOfType("snackOverview").FirstOrDefault();
}
<!doctype html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@(ViewData["Title"] ?? "Kino Streaming Portal")</title>

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Custom -->
  <link href="/css/site.css" rel="stylesheet" />
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="@root?.Url()">ðŸŽ¬ Kino Portal</a>
      <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="@root?.Url()">Home</a></li>
          @if (snacks != null)   { <li class="nav-item"><a class="nav-link" href="@snacks.Url()">Snacks</a></li> }
          @if (feedback != null) { <li class="nav-item"><a class="nav-link" href="@feedback.Url()">Feedback</a></li> }
        </ul>
      </div>
    </div>
  </nav>

  <main class="py-4">
    <div class="container">
      @RenderBody()
    </div>
  </main>

  <footer class="bg-dark text-light py-4 mt-5">
    <div class="container small d-flex justify-content-between">
      <span>Â© @DateTime.Now.Year â€“ Kino/Streaming-Night</span>
      <span class="text-secondary">Built with Umbraco</span>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
